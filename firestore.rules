rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Define rules for the 'events' collection
    match /events/{eventId} {
      // Anyone can read event details
      allow read: if true;
      
      // IMPORTANT: Only authenticated users with an 'admin' custom claim
      // can create, update, or delete events.
      allow create, update, delete: if request.auth.token.admin == true;
    }
    
    // Allow users to view their own data, but not others'.
    // This is a good practice for future user-specific features.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
