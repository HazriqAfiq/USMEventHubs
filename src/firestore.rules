
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get user's role from the 'users' collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    // Helper function to check if user is an organizer
    function isOrganizer(userId) {
      return getUserRole(userId) == 'organizer';
    }

    // Helper function to check if user is a superadmin
    function isSuperAdmin(userId) {
        return getUserRole(userId) == 'superadmin';
    }
    
    // Helper function to check if a user is a student
    function isStudent(userId) {
      return getUserRole(userId) == 'student';
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Site settings, like the global banner.
    match /site_settings/{docId} {
      // Anyone can read site settings
      allow get: if true;
      // Only superadmins can change site settings
      allow write: if request.auth != null && isSuperAdmin(request.auth.uid);
    }

    // Define rules for the 'events' collection
    match /events/{eventId} {
      // Anyone can read event details IF the event is approved
      // Organizers and Superadmins can read any event, regardless of status (for editing/previewing)
      allow get: if (resource.data.status == 'approved') || 
                   (request.auth != null && (isOrganizer(request.auth.uid) || isSuperAdmin(request.auth.uid)));

      // Allow listing events. Client-side queries handle filtering by 'approved' status for regular users.
      // Organizers and Superadmins have broader list access handled by their specific page queries.
      allow list: if request.auth != null;


      // Creation of events
      allow create: if request.auth != null && (isOrganizer(request.auth.uid) || isSuperAdmin(request.auth.uid))
                    && request.resource.data.organizerId == request.auth.uid
                    && request.resource.data.imageUrl is string
                    && (
                      (isOrganizer(request.auth.uid) && request.resource.data.status == 'pending') ||
                      (isSuperAdmin(request.auth.uid) && request.resource.data.status == 'approved')
                    )
                    // New events must not have the isApprovedOnce flag set to true
                    && (request.resource.data.isApprovedOnce == false || request.resource.data.isApprovedOnce == null);
      
      // Update rules:
      allow update: if request.auth != null && (
        ( // Rule for Organizer updates
          isOrganizer(request.auth.uid) 
          && resource.data.organizerId == request.auth.uid
          && (
            // Organizers can edit their pending/rejected events and resubmit
            (resource.data.status == 'pending' && request.resource.data.status == 'pending')
            ||
            (resource.data.status == 'rejected' && (request.resource.data.status == 'pending' || request.resource.data.status == 'pending-update'))
            ||
            // Organizers can edit their approved events, but must move to 'pending-update' and provide a reason
            (resource.data.status == 'approved' && request.resource.data.status == 'pending-update' && request.resource.data.updateReason is string)
            ||
            // Organizers can edit their pending-update events
            (resource.data.status == 'pending-update' && request.resource.data.status == 'pending-update' && request.resource.data.updateReason is string)
            ||
            // Organizers can cancel a pending-update and revert to approved
            (resource.data.status == 'pending-update' && request.resource.data.status == 'approved' && request.resource.data.updateReason == '')
            ||
            // Organizers can request deletion for an approved event by providing a reason
            (resource.data.status == 'approved' && request.resource.data.status == 'pending-deletion' && request.resource.data.deletionReason is string)
          )
        ) ||
        ( // Rule for student view count increment
          isStudent(request.auth.uid)
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewCount']) // Ensure only viewCount is being changed
        ) ||
        ( // Rule for Superadmin updates - can update anything, including status changes.
            isSuperAdmin(request.auth.uid)
        )
      );
      
      // Organizers can delete their own events (if not approved), Superadmins can delete any event.
      allow delete: if request.auth != null && (isSuperAdmin(request.auth.uid) || (isOrganizer(request.auth.uid) && resource.data.organizerId == request.auth.uid && resource.data.status != 'approved' && resource.data.status != 'pending-deletion'));
      
      // Rules for listing the 'registrations' subcollection
      match /registrations/{document=**} {
        // Organizers and Superadmins can list all registrations for any event.
        allow list: if request.auth != null && (
            (isOrganizer(request.auth.uid) && get(/databases/$(database)/documents/events/$(eventId)).data.organizerId == request.auth.uid) || 
            isSuperAdmin(request.auth.uid)
        );
      }

      // Rules for individual 'registrations' documents
      match /registrations/{registrationId} {
        // Allow a user to create their own registration document if event is approved
        allow create: if request.auth.uid == registrationId && get(/databases/$(database)/documents/events/$(eventId)).data.status == 'approved';

        // Allow a user to delete their own registration (unregister)
        allow delete: if request.auth.uid == registrationId;
        
        // A user can read their own registration document.
        allow read: if request.auth != null && request.auth.uid == registrationId;
      }
      
      // Rules for event chat messages
      match /messages/{messageId} {
        // Only authenticated organizers, superadmins or registered participants can read messages
        allow read: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.status == 'approved' && (
          isOrganizer(request.auth.uid) ||
          isSuperAdmin(request.auth.uid) ||
          exists(/databases/$(database)/documents/events/$(eventId)/registrations/$(request.auth.uid))
        );

        // Allow creating a message if the senderId matches auth and user is organizer, superadmin or registered
        allow create: if request.auth != null && get(/databases/$(database)/documents/events/$(eventId)).data.status == 'approved'
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.text is string
          && request.resource.data.text.size() > 0
          && (
            isOrganizer(request.auth.uid) ||
            isSuperAdmin(request.auth.uid) ||
            exists(/databases/$(database)/documents/events/$(eventId)/registrations/$(request.auth.uid))
          );

        // Allow the event organizer or superadmins to toggle the `pinned` flag only.
        allow update: if request.auth != null && (
          isSuperAdmin(request.auth.uid) ||
          // organizer of the parent event can pin/unpin
          get(/databases/$(database)/documents/events/$(eventId)).data.organizerId == request.auth.uid
        )
        // Ensure only `pinned` is being changed and it is a boolean
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pinned'])
        && request.resource.data.pinned is bool;

        // Allow delete by superadmin or the original sender
        allow delete: if request.auth != null && (
          isSuperAdmin(request.auth.uid) || 
          resource.data.senderId == request.auth.uid
        );
      }
    }
    
    // Define rules for the 'users' collection
    match /users/{userId} {
      // A user can create their own profile document (on registration)
      allow create: if request.auth.uid == userId 
                    && request.resource.data.uid == userId
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0
                    && request.resource.data.photoURL == null
                    && request.resource.data.role == 'student'
                    && request.resource.data.campus is string
                    && request.resource.data.disabled == false;

      // Allow any authenticated user to read profiles.
      // Profile data is not sensitive and is required for chat display etc.
      // Superadmins can list all users.
      allow get: if request.auth != null;
      allow list: if request.auth != null && isSuperAdmin(request.auth.uid);

      // A user can update their own 'name' or 'photoURL'. 
      // Superadmins can change any field, including roles and disabled status.
      allow update: if request.auth != null && (
                      ( // User's own updates
                        request.auth.uid == userId &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['name', 'photoURL']) &&
                        request.resource.data.name is string &&
                        request.resource.data.name.size() > 0 &&
                        (request.resource.data.photoURL == resource.data.photoURL || (request.resource.data.photoURL is string && request.resource.data.photoURL.size() < 1048576))
                      ) ||
                      ( // Superadmin updates
                        isSuperAdmin(request.auth.uid)
                      )
                    );

      // Only superadmins can delete user documents. A user cannot delete their own document.
      allow delete: if request.auth != null && isSuperAdmin(request.auth.uid);
    }
  }
}
