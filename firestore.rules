rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get user's role from the 'users' collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    // Helper function to check if user is an admin
    function isAdmin(userId) {
      return getUserRole(userId) == 'admin';
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Define rules for the 'events' collection
    match /events/{eventId} {
      // Anyone can read event details
      allow read: if true;
      
      // Admins can create events, but must set themselves as the organizer
      allow create: if request.auth != null && isAdmin(request.auth.uid) 
                    && request.resource.data.organizerId == request.auth.uid
                    && request.resource.data.imageUrl is string;
      
      // Only the original organizer can update or delete their event
      allow update: if request.auth != null && isAdmin(request.auth.uid) 
                    && resource.data.organizerId == request.auth.uid
                    && request.resource.data.imageUrl is string;

      allow delete: if request.auth != null && isAdmin(request.auth.uid) && resource.data.organizerId == request.auth.uid;
      
      // Rules for listing the 'registrations' subcollection
      match /registrations/{document=**} {
        // Any admin can list all registrations for any event.
        allow list: if request.auth != null && isAdmin(request.auth.uid);
      }

      // Rules for individual 'registrations' documents
      match /registrations/{registrationId} {
        // Allow a user to create their own registration document
        allow create: if request.auth.uid == registrationId;

        // Allow a user to delete their own registration (unregister)
        allow delete: if request.auth.uid == registrationId;
        
        // A user can read their own registration document.
        allow read: if request.auth != null && request.auth.uid == registrationId;
      }
      
      // Rules for event chat messages
      match /messages/{messageId} {
        // Only authenticated admins or registered participants can read messages
        allow read: if request.auth != null && (
          isAdmin(request.auth.uid) ||
          exists(/databases/$(database)/documents/events/$(eventId)/registrations/$(request.auth.uid))
        );

        // Allow creating a message if the senderId matches auth and user is admin or registered
        allow create: if request.auth != null
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.text is string
          && request.resource.data.text.size() > 0
          && (
            isAdmin(request.auth.uid) ||
            exists(/databases/$(database)/documents/events/$(eventId)/registrations/$(request.auth.uid))
          );

        // Allow the event organizer or admins to toggle the `pinned` flag only.
        // This prevents arbitrary edits to messages while allowing pin/unpin functionality.
        allow update: if request.auth != null && (
          isAdmin(request.auth.uid) ||
          // organizer of the parent event can pin/unpin
          get(/databases/$(database)/documents/events/$(eventId)).data.organizerId == request.auth.uid
        )
        // Ensure only `pinned` is being changed and it is a boolean
        && request.resource.data.pinned is bool
        && request.resource.data.text == resource.data.text
        && request.resource.data.senderId == resource.data.senderId
        && request.resource.data.senderName == resource.data.senderName
        && request.resource.data.senderPhotoURL == resource.data.senderPhotoURL
        && request.resource.data.isOrganizer == resource.data.isOrganizer
        && request.resource.data.createdAt == resource.data.createdAt;

        // Allow delete by admin or the original sender
        allow delete: if request.auth != null && (
          isAdmin(request.auth.uid) || resource.data.senderId == request.auth.uid
        );
      }
    }
    
    // Define rules for the 'users' collection
    match /users/{userId} {
      // A user can create their own profile document (on registration)
      allow create: if request.auth.uid == userId 
                    && request.resource.data.uid == userId
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0
                    && request.resource.data.photoURL == null
                    && request.resource.data.role == 'student'
                    && request.resource.data.campus is string;

      // Allow authenticated users to read profiles (needed to show display name/avatar in chat).
      // If you need stricter privacy, change this to only allow admins or the profile owner.
      allow read: if request.auth != null;

      // A user can update their own 'name' or 'photoURL'. Admins can update any field except campus/email.
      allow update: if (request.auth.uid == userId 
                      // Ensure no other fields are being changed by the user.
                      && request.resource.data.uid == resource.data.uid
                      && request.resource.data.email == resource.data.email
                      && request.resource.data.role == resource.data.role
                      && request.resource.data.campus == resource.data.campus
                      // Validate incoming data types for user updates
                      && request.resource.data.name is string
                      && request.resource.data.name.size() > 0
                      && (
                        // Allow photoURL to be a string or stay the same.
                        request.resource.data.photoURL == resource.data.photoURL || 
                        (request.resource.data.photoURL is string && request.resource.data.photoURL.size() < 1048576) // Limit data URI to 1MB
                        )
                    ) 
                    || (request.auth != null && isAdmin(request.auth.uid) 
                        && request.resource.data.campus == resource.data.campus
                        && request.resource.data.email == resource.data.email);
    }
  }
}
