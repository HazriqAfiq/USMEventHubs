rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read on event images and QR codes
    match /event-images/{eventId}/{allPaths=**} {
      allow read: if true;
      // Allow write if the user is authenticated. 
      // The application UI already restricts event creation to admins.
      allow write: if request.auth != null;
    }

    match /qr-codes/{eventId}/{allPaths=**} {
      allow read: if true;
      // Allow write if the user is authenticated.
      // The application UI already restricts event creation to admins.
      allow write: if request.auth != null;
    }

    // Allow users to upload and view their own profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to upload payment proofs for events they are registering for.
    // Admins can view proofs for their events.
    match /payment-proofs/{eventId}/{userId}/{allPaths=**} {
      allow read: if request.auth != null &&
                  (
                    request.auth.uid == userId ||
                    get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin'
                  );
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
