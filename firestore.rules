rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get user's role from the 'users' collection
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    // Helper function to check if user is an admin
    function isAdmin(userId) {
      return getUserRole(userId) == 'admin';
    }

    // Helper function to get the organizer ID of an event
    function getEventOrganizer(eventId) {
      return get(/databases/$(database)/documents/events/$(eventId)).data.organizerId;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Rule for the 'registrations' collection group query
    match /{path=**}/registrations/{registrationId} {
        // Allow a user to list their own registrations across all events.
        // This is needed for the "My Dashboard" page.
        allow list: if request.auth != null && request.auth.uid == resource.data.id;
    }

    // Define rules for the 'events' collection
    match /events/{eventId} {
      // Anyone can read event details
      allow read: if true;
      
      // Admins can create events, but must set themselves as the organizer
      allow create: if request.auth != null && isAdmin(request.auth.uid) && request.resource.data.organizerId == request.auth.uid;
      
      // Only the original organizer can update or delete their event
      allow update, delete: if request.auth != null && isAdmin(request.auth.uid) && resource.data.organizerId == request.auth.uid;

      // Rules for the 'registrations' subcollection
      match /registrations/{userId} {
        // Allow a user to create their own registration document
        allow create: if request.auth.uid == userId;

        // Allow a user to delete their own registration (unregister)
        allow delete: if request.auth.uid == userId;
        
        // A user can read their own registration document.
        allow read: if request.auth != null && request.auth.uid == userId;
      }

      // The event organizer can list all registrations for their event.
      match /registrations/{registrationId} {
        allow list: if request.auth != null && isAdmin(request.auth.uid) && getEventOrganizer(eventId) == request.auth.uid;
      }
    }
    
    // Define rules for the 'users' collection
    match /users/{userId} {
      // A user can create their own profile document (on registration)
      allow create: if request.auth.uid == userId;

      // A user can read their own profile, and admins can read any profile
      allow read: if request.auth.uid == userId || (request.auth != null && isAdmin(request.auth.uid));

      // A user cannot change their own role. Only admins can update user profiles (e.g., to change a role)
      allow update: if request.auth != null && isAdmin(request.auth.uid);
    }
  }
}
